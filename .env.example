# Server configuration
PORT=3000
NODE_ENV=development # development, production, test
CORS_ORIGIN=* # Use comma-separated list for multiple origins (e.g., http://localhost:8080,https://example.com)

# Database configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=school_management
DB_CONNECTION_LIMIT=10

# Logging configuration
LOG_LEVEL=info # One of: error, warn, info, http, verbose, debug, silly
LOG_MAX_FILES=5
LOG_MAX_SIZE=10485760 # 10MB

# API rate limiting
RATE_LIMIT_MAX=100 # Maximum requests per 15 minutes

# Security settings
JWT_SECRET=your_secret_key_change_in_production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=10
REQUIRE_AUTH=false # Set to true to require authentication for API endpoints
